<div class="text-center landing">
<h1>Movies I Want to Watch</h1>
<%= link_to "Try it Now", new_user_registration_path, class: "btn btn-primary btn-lg" %>
</div>


  <% @movis.each do |movie| %>
  <div class="col-md-3">
    <div><%= image_tag movie.image_url %></div>
    <h3><%= movie.title %></h3>
    <div><h4>Rating: <%= movie.hotness %></h4></div>
    <div><%= movie.rating %></div>
    <div>Posted by <%= movie.user.email %></div>
  </div>
  <% end %>
